rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /recruiter_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Also likely need jobs and applications access
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null; // Refine later
    }
    match /job_applications/{applicationId} {
      allow read, write: if request.auth != null; // Refine later
    }
  }
}